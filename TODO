use CPAN::Testers::Common::Client::Config;
$cf=CPAN::Testers::Common::Client::Config->new;
$cf->read;
if (lc($cf->transport_name) ne 'file') {
  die "cpanm must be configured to use the File transport method."
} else {
  $transport_file = $cf->transport_args[0];
}

